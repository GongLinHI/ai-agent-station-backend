<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gonglin.ai4knowledge.infrastructure.mysql.mapper.AiAgentTaskScheduleMapper">

    <sql id="notDeleted">
        is_deleted = 0
    </sql>

    <sql id="allColumns">
        id, agent_id, task_name, description, cron_expression, task_param, status, create_time, update_time, is_deleted, delete_time
    </sql>

    <sql id="DynamicInsertColumnName">
        <if test="agentId != null">agent_id,</if>
        <if test="taskName != null">task_name,</if>
        <if test="description != null">description,</if>
        <if test="cronExpression != null">cron_expression,</if>
        <if test="taskParam != null">task_param,</if>
        <if test="status != null">status,</if>
        <if test="createTime != null">create_time,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="isDeleted != null">is_deleted,</if>
        <if test="deleteTime != null">delete_time,</if>
    </sql>

    <sql id="DynamicInsertColumnValue">
        <if test="agentId != null">#{agentId},</if>
        <if test="taskName != null">#{taskName},</if>
        <if test="description != null">#{description},</if>
        <if test="cronExpression != null">#{cronExpression},</if>
        <if test="taskParam != null">#{taskParam},</if>
        <if test="status != null">#{status},</if>
        <if test="createTime != null">#{createTime},</if>
        <if test="updateTime != null">#{updateTime},</if>
        <if test="isDeleted != null">#{isDeleted},</if>
        <if test="deleteTime != null">#{deleteTime},</if>
    </sql>

    <sql id="DynamicUpdateColumns">
        <if test="agentId != null">agent_id = #{agentId},</if>
        <if test="taskName != null">task_name = #{taskName},</if>
        <if test="description != null">description = #{description},</if>
        <if test="cronExpression != null">cron_expression = #{cronExpression},</if>
        <if test="taskParam != null">task_param = #{taskParam},</if>
        <if test="status != null">status = #{status},</if>
        <if test="createTime != null">create_time = #{createTime},</if>
        <if test="updateTime != null">update_time = #{updateTime},</if>
        <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
        <if test="deleteTime != null">delete_time = #{deleteTime},</if>
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_agent_task_schedule
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnName"/>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnValue"/>
        </trim>
    </insert>

    <update id="deleteById">
        UPDATE ai_agent_task_schedule
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="deleteByAgentId">
        UPDATE ai_agent_task_schedule
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE agent_id = #{agentId}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateById">
        UPDATE ai_agent_task_schedule
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <select id="queryById"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.AiAgentTaskSchedule">
        SELECT
        <include refid="allColumns"/>
        FROM ai_agent_task_schedule
        WHERE id = #{id} AND
        <include refid="notDeleted"/>
    </select>

    <select id="queryByAgentId"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.AiAgentTaskSchedule">
        SELECT
        <include refid="allColumns"/>
        FROM ai_agent_task_schedule
        WHERE agent_id = #{agentId} AND
        <include refid="notDeleted"/>
        ORDER BY create_time DESC
    </select>

    <select id="queryByStatus"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.AiAgentTaskSchedule">
        SELECT
        <include refid="allColumns"/>
        FROM ai_agent_task_schedule
        WHERE status = #{status} AND <include refid="notDeleted"/>
        ORDER BY create_time DESC
    </select>

    <select id="queryAll"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.AiAgentTaskSchedule">
        SELECT
        <include refid="allColumns"/>
        FROM ai_agent_task_schedule
        WHERE
        <include refid="notDeleted"/>
        ORDER BY create_time DESC
    </select>
</mapper>
