<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gonglin.ai4knowledge.infrastructure.mysql.mapper.AiApiMapper">

    <sql id="notDeleted">
        is_deleted = 0
    </sql>
    <sql id="allColumns">
        id, api_id, api_name, base_url, api_key, completions_path, embeddings_path, api_provider, ext_param, timeout, status, create_time, update_time, is_deleted, delete_time
    </sql>

    <sql id="DynamicInsertColumnName">
        <if test="apiId != null">api_id,</if>
        <if test="apiName != null">api_name,</if>
        <if test="baseUrl != null">base_url,</if>
        <if test="apiKey != null">api_key,</if>
        <if test="completionsPath != null">completions_path,</if>
        <if test="embeddingsPath != null">embeddings_path,</if>
        <if test="apiProvider != null">api_provider,</if>
        <if test="extParam != null">ext_param,</if>
        <if test="timeout != null">timeout,</if>
        <if test="status != null">status,</if>
        <if test="createTime != null">create_time,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="isDeleted != null">is_deleted,</if>
        <if test="deleteTime != null">delete_time,</if>
    </sql>

    <sql id="DynamicInsertColumnValue">
        <if test="apiId != null">#{apiId},</if>
        <if test="apiName != null">#{apiName},</if>
        <if test="baseUrl != null">#{baseUrl},</if>
        <if test="apiKey != null">#{apiKey},</if>
        <if test="completionsPath != null">#{completionsPath},</if>
        <if test="embeddingsPath != null">#{embeddingsPath},</if>
        <if test="apiProvider != null">#{apiProvider},</if>
        <if test="extParam != null">#{extParam},</if>
        <if test="timeout != null">#{timeout},</if>
        <if test="status != null">#{status},</if>
        <if test="createTime != null">#{createTime},</if>
        <if test="updateTime != null">#{updateTime},</if>
        <if test="isDeleted != null">#{isDeleted},</if>
        <if test="deleteTime != null">#{deleteTime},</if>
    </sql>

    <sql id="DynamicUpdateColumns">
        <if test="apiId != null">api_id = #{apiId},</if>
        <if test="apiName != null">api_name = #{apiName},</if>
        <if test="baseUrl != null">base_url = #{baseUrl},</if>
        <if test="apiKey != null">api_key = #{apiKey},</if>
        <if test="completionsPath != null">completions_path = #{completionsPath},</if>
        <if test="embeddingsPath != null">embeddings_path = #{embeddingsPath},</if>
        <if test="apiProvider != null">api_provider = #{apiProvider},</if>
        <if test="extParam != null">ext_param = #{extParam},</if>
        <if test="timeout != null">timeout = #{timeout},</if>
        <if test="status != null">status = #{status},</if>
        <if test="createTime != null">create_time = #{createTime},</if>
        <if test="updateTime != null">update_time = #{updateTime},</if>
        <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
        <if test="deleteTime != null">delete_time = #{deleteTime},</if>
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_api
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnName"/>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnValue"/>
        </trim>
    </insert>

    <update id="deleteById">
        UPDATE ai_api
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="deleteByApiId">
        UPDATE ai_api
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE api_id = #{apiId}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateById">
        UPDATE ai_api
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateByApiId">
        UPDATE ai_api
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE api_id = #{apiId} AND
        <include refid="notDeleted"/>
    </update>



    <select id="query"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.AiApi">
        SELECT
        <include refid="allColumns"/>
        FROM ai_api
        WHERE 1=1
        <if test="isDeleted != null">
            AND is_deleted = #{isDeleted}
        </if>
        <if test="id != null">
            AND id = #{id}
        </if>
        <if test="apiId != null and apiId != ''">
            AND api_id = #{apiId}
        </if>
        <if test="apiName != null and apiName != ''">
            AND api_name LIKE CONCAT('%', #{apiName}, '%')
        </if>
        <if test="baseUrl != null and baseUrl != ''">
            AND base_url LIKE CONCAT('%', #{baseUrl}, '%')
        </if>
        <if test="apiKey != null and apiKey != ''">
            AND api_key LIKE CONCAT('%', #{apiKey}, '%')
        </if>
        <if test="completionsPath != null and completionsPath != ''">
            AND completions_path LIKE CONCAT('%', #{completionsPath}, '%')
        </if>
        <if test="embeddingsPath != null and embeddingsPath != ''">
            AND embeddings_path LIKE CONCAT('%', #{embeddingsPath}, '%')
        </if>
        <if test="apiProvider != null and apiProvider != ''">
            AND api_provider LIKE CONCAT('%', #{apiProvider}, '%')
        </if>
        <if test="extParam != null and extParam != ''">
            AND ext_param LIKE CONCAT('%', #{extParam}, '%')
        </if>
        <if test="timeout != null">
            AND timeout = #{timeout}
        </if>
        <if test="status != null">
            AND status = #{status}
        </if>
        ORDER BY create_time DESC
    </select>
</mapper>