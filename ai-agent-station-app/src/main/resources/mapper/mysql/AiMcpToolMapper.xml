<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gonglin.ai4knowledge.infrastructure.mysql.mapper.AiMcpToolMapper">

    <sql id="notDeleted">
        is_deleted = 0
    </sql>
    <sql id="allColumns">
        id, mcp_id, mcp_name, description, transport_type, transport_config, timeout, status, create_time, update_time, is_deleted, delete_time
    </sql>

    <sql id="DynamicInsertColumnName">
        <if test="mcpId != null">mcp_id,</if>
        <if test="mcpName != null">mcp_name,</if>
        <if test="description != null">description,</if>
        <if test="transportType != null">transport_type,</if>
        <if test="transportConfig != null">transport_config,</if>
        <if test="timeout != null">timeout,</if>
        <if test="status != null">status,</if>
        <if test="createTime != null">create_time,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="isDeleted != null">is_deleted,</if>
        <if test="deleteTime != null">delete_time,</if>
    </sql>

    <sql id="DynamicInsertColumnValue">
        <if test="mcpId != null">#{mcpId},</if>
        <if test="mcpName != null">#{mcpName},</if>
        <if test="description != null">#{description},</if>
        <if test="transportType != null">#{transportType},</if>
        <if test="transportConfig != null">#{transportConfig},</if>
        <if test="timeout != null">#{timeout},</if>
        <if test="status != null">#{status},</if>
        <if test="createTime != null">#{createTime},</if>
        <if test="updateTime != null">#{updateTime},</if>
        <if test="isDeleted != null">#{isDeleted},</if>
        <if test="deleteTime != null">#{deleteTime},</if>
    </sql>

    <sql id="DynamicUpdateColumns">
        <if test="mcpId != null">mcp_id = #{mcpId},</if>
        <if test="mcpName != null">mcp_name = #{mcpName},</if>
        <if test="description != null">description = #{description},</if>
        <if test="transportType != null">transport_type = #{transportType},</if>
        <if test="transportConfig != null">transport_config = #{transportConfig},</if>
        <if test="timeout != null">timeout = #{timeout},</if>
        <if test="status != null">status = #{status},</if>
        <if test="createTime != null">create_time = #{createTime},</if>
        <if test="updateTime != null">update_time = #{updateTime},</if>
        <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
        <if test="deleteTime != null">delete_time = #{deleteTime},</if>
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_mcp_tool
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnName"/>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnValue"/>
        </trim>
    </insert>

    <update id="deleteById">
        UPDATE ai_mcp_tool
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE id = #{id}
        and
        <include refid="notDeleted"/>
    </update>

    <update id="deleteByMcpId">
        UPDATE ai_mcp_tool
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE mcp_id = #{mcpId}
        and
        <include refid="notDeleted"/>
    </update>

    <update id="updateById">
        UPDATE ai_mcp_tool
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE id = #{id}
        and
        <include refid="notDeleted"/>
    </update>

    <update id="updateByMcpId">
        UPDATE ai_mcp_tool
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE mcp_id = #{mcpId}
        and
        <include refid="notDeleted"/>
    </update>

    <select id="queryById"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.AiMcpTool">
        SELECT
        <include refid="allColumns"/>
        FROM ai_mcp_tool
        WHERE id = #{id}
        and
        <include refid="notDeleted"/>
    </select>

    <select id="queryByMcpId"
            parameterType="java.lang.String"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.AiMcpTool">
        SELECT
        <include refid="allColumns"/>
        FROM ai_mcp_tool
        WHERE mcp_id = #{mcpId}
        and
        <include refid="notDeleted"/>
    </select>

    <select id="query"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.AiMcpTool">
        SELECT
        <include refid="allColumns"/>
        FROM ai_mcp_tool
        WHERE 1=1
        <if test="id != null">AND id = #{id}</if>
        <if test="mcpId != null and mcpId != ''">AND mcp_id = #{mcpId}</if>
        <if test="mcpName != null and mcpName != ''">AND mcp_name LIKE CONCAT('%', #{mcpName}, '%')</if>
        <if test="description != null and description != ''">AND description LIKE CONCAT('%', #{description}, '%')</if>
        <if test="transportType != null and transportType != ''">AND transport_type LIKE CONCAT('%', #{transportType},
            '%')
        </if>
        <if test="transportConfig != null and transportConfig != ''">AND transport_config LIKE CONCAT('%',
            #{transportConfig}, '%')
        </if>
        <if test="timeout != null">AND timeout = #{timeout}</if>
        <if test="status != null">AND status = #{status}</if>
        <if test="isDeleted != null">AND is_deleted = #{isDeleted}</if>
        ORDER BY create_time DESC
    </select>

</mapper>
