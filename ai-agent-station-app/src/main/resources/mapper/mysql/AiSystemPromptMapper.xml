<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gonglin.ai4knowledge.infrastructure.mysql.mapper.AiSystemPromptMapper">

    <sql id="notDeleted">
        is_deleted = 0
    </sql>

    <sql id="allColumns">
        id, prompt_id, prompt_name, prompt_content, description, status, create_time, update_time, is_deleted, delete_time
    </sql>

    <sql id="DynamicInsertColumnName">
        <if test="promptId != null">prompt_id,</if>
        <if test="promptName != null">prompt_name,</if>
        <if test="promptContent != null">prompt_content,</if>
        <if test="description != null">description,</if>
        <if test="status != null">status,</if>
        <if test="createTime != null">create_time,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="isDeleted != null">is_deleted,</if>
        <if test="deleteTime != null">delete_time,</if>
    </sql>

    <sql id="DynamicInsertColumnValue">
        <if test="promptId != null">#{promptId},</if>
        <if test="promptName != null">#{promptName},</if>
        <if test="promptContent != null">#{promptContent},</if>
        <if test="description != null">#{description},</if>
        <if test="status != null">#{status},</if>
        <if test="createTime != null">#{createTime},</if>
        <if test="updateTime != null">#{updateTime},</if>
        <if test="isDeleted != null">#{isDeleted},</if>
        <if test="deleteTime != null">#{deleteTime},</if>
    </sql>

    <sql id="DynamicUpdateColumns">
        <if test="promptId != null">prompt_id = #{promptId},</if>
        <if test="promptName != null">prompt_name = #{promptName},</if>
        <if test="promptContent != null">prompt_content = #{promptContent},</if>
        <if test="description != null">description = #{description},</if>
        <if test="status != null">status = #{status},</if>
        <if test="createTime != null">create_time = #{createTime},</if>
        <if test="updateTime != null">update_time = #{updateTime},</if>
        <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
        <if test="deleteTime != null">delete_time = #{deleteTime},</if>
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_system_prompt
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnName"/>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnValue"/>
        </trim>
    </insert>

    <update id="deleteById">
        UPDATE ai_system_prompt
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="deleteByPromptId">
        UPDATE ai_system_prompt
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE prompt_id = #{promptId}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateById">
        UPDATE ai_system_prompt
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateByPromptId">
        UPDATE ai_system_prompt
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE prompt_id = #{promptId} AND
        <include refid="notDeleted"/>
    </update>


    <select id="query"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.AiSystemPrompt">
        SELECT
        <include refid="allColumns"/>
        FROM ai_system_prompt
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="promptId != null and promptId != ''">
                AND prompt_id = #{promptId}
            </if>
            <if test="promptName != null and promptName != ''">
                AND prompt_name LIKE CONCAT('%', #{promptName}, '%')
            </if>
            <if test="promptContent != null and promptContent != ''">
                AND prompt_content LIKE CONCAT('%', #{promptContent}, '%')
            </if>
            <if test="description != null and description != ''">
                AND description LIKE CONCAT('%', #{description}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="isDeleted != null">
                AND is_deleted = #{isDeleted}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
</mapper>
