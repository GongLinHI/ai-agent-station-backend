<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gonglin.ai4knowledge.infrastructure.mysql.mapper.PermissionMapper">

    <sql id="notDeleted">
        is_deleted = 0
    </sql>

    <sql id="allColumns">
        id, perm_id, perm_code, perm_name, description, status, create_time, update_time, is_deleted, delete_time
    </sql>

    <sql id="DynamicInsertColumnName">
        <if test="permId != null">perm_id,</if>
        <if test="permCode != null">perm_code,</if>
        <if test="permName != null">perm_name,</if>
        <if test="description != null">description,</if>
        <if test="status != null">status,</if>
        <if test="createTime != null">create_time,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="isDeleted != null">is_deleted,</if>
        <if test="deleteTime != null">delete_time,</if>
    </sql>

    <sql id="DynamicInsertColumnValue">
        <if test="permId != null">#{permId},</if>
        <if test="permCode != null">#{permCode},</if>
        <if test="permName != null">#{permName},</if>
        <if test="description != null">#{description},</if>
        <if test="status != null">#{status},</if>
        <if test="createTime != null">#{createTime},</if>
        <if test="updateTime != null">#{updateTime},</if>
        <if test="isDeleted != null">#{isDeleted},</if>
        <if test="deleteTime != null">#{deleteTime},</if>
    </sql>

    <sql id="DynamicUpdateColumns">
        <if test="permId != null">perm_id = #{permId},</if>
        <if test="permCode != null">perm_code = #{permCode},</if>
        <if test="permName != null">perm_name = #{permName},</if>
        <if test="description != null">description = #{description},</if>
        <if test="status != null">status = #{status},</if>
        <if test="createTime != null">create_time = #{createTime},</if>
        <if test="updateTime != null">update_time = #{updateTime},</if>
        <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
        <if test="deleteTime != null">delete_time = #{deleteTime},</if>
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO permission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnName"/>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnValue"/>
        </trim>
    </insert>

    <update id="deleteById">
        UPDATE permission
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="deleteByPermId">
        UPDATE permission
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE perm_id = #{permId}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateById">
        UPDATE permission
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateByPermId">
        UPDATE permission
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE perm_id = #{permId}
        AND
        <include refid="notDeleted"/>
    </update>

    <select id="query"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.Permission">
        SELECT
        <include refid="allColumns"/>
        FROM permission
        WHERE
        1=1
        <if test="id != null">
            AND id = #{id}
        </if>
        <if test="permId != null and permId != ''">
            AND perm_id = #{permId}
        </if>
        <if test="permCode != null and permCode != ''">
            AND perm_code LIKE CONCAT('%', #{permCode}, '%')
        </if>
        <if test="permName != null and permName != ''">
            AND perm_name LIKE CONCAT('%', #{permName}, '%')
        </if>
        <if test="status != null">
            AND status = #{status}
        </if>
        <if test="isDeleted != null">
            AND is_deleted = #{isDeleted}
        </if>
        ORDER BY create_time DESC
    </select>

    <select id="queryByPermCode"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.Permission">
        SELECT
        <include refid="allColumns"/>
        FROM permission
        WHERE perm_code = #{permCode}
        AND
        <include refid="notDeleted"/>
        LIMIT 1
    </select>

    <select id="queryByPermIds"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.Permission">
        SELECT
        <include refid="allColumns"/>
        FROM permission
        WHERE perm_id IN
        <foreach collection="permIds" item="permId" open="(" close=")" separator=",">
            #{permId}
        </foreach>
        AND
        <include refid="notDeleted"/>
        AND status = 1
        ORDER BY perm_code
    </select>
</mapper>
