<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gonglin.ai4knowledge.infrastructure.mysql.mapper.RoleMapper">

    <sql id="notDeleted">
        is_deleted = 0
    </sql>

    <sql id="allColumns">
        id, role_id, role_code, role_name, description, status, create_time, update_time, is_deleted, delete_time
    </sql>

    <sql id="DynamicInsertColumnName">
        <if test="roleId != null">role_id,</if>
        <if test="roleCode != null">role_code,</if>
        <if test="roleName != null">role_name,</if>
        <if test="description != null">description,</if>
        <if test="status != null">status,</if>
        <if test="createTime != null">create_time,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="isDeleted != null">is_deleted,</if>
        <if test="deleteTime != null">delete_time,</if>
    </sql>

    <sql id="DynamicInsertColumnValue">
        <if test="roleId != null">#{roleId},</if>
        <if test="roleCode != null">#{roleCode},</if>
        <if test="roleName != null">#{roleName},</if>
        <if test="description != null">#{description},</if>
        <if test="status != null">#{status},</if>
        <if test="createTime != null">#{createTime},</if>
        <if test="updateTime != null">#{updateTime},</if>
        <if test="isDeleted != null">#{isDeleted},</if>
        <if test="deleteTime != null">#{deleteTime},</if>
    </sql>

    <sql id="DynamicUpdateColumns">
        <if test="roleId != null">role_id = #{roleId},</if>
        <if test="roleCode != null">role_code = #{roleCode},</if>
        <if test="roleName != null">role_name = #{roleName},</if>
        <if test="description != null">description = #{description},</if>
        <if test="status != null">status = #{status},</if>
        <if test="createTime != null">create_time = #{createTime},</if>
        <if test="updateTime != null">update_time = #{updateTime},</if>
        <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
        <if test="deleteTime != null">delete_time = #{deleteTime},</if>
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnName"/>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnValue"/>
        </trim>
    </insert>

    <update id="deleteById">
        UPDATE role
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="deleteByRoleId">
        UPDATE role
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE role_id = #{roleId}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateById">
        UPDATE role
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateByRoleId">
        UPDATE role
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE role_id = #{roleId}
        AND
        <include refid="notDeleted"/>
    </update>

    <select id="query"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.Role">
        SELECT
        <include refid="allColumns"/>
        FROM role
        WHERE
        1=1
        <if test="id != null">
            AND id = #{id}
        </if>
        <if test="roleId != null and roleId != ''">
            AND role_id = #{roleId}
        </if>
        <if test="roleCode != null and roleCode != ''">
            AND role_code LIKE CONCAT('%', #{roleCode}, '%')
        </if>
        <if test="roleName != null and roleName != ''">
            AND role_name LIKE CONCAT('%', #{roleName}, '%')
        </if>
        <if test="status != null">
            AND status = #{status}
        </if>
        <if test="isDeleted != null">
            AND is_deleted = #{isDeleted}
        </if>
        ORDER BY create_time DESC
    </select>

    <select id="queryByRoleCode"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.Role">
        SELECT
        <include refid="allColumns"/>
        FROM role
        WHERE role_code = #{roleCode}
        AND
        <include refid="notDeleted"/>
        LIMIT 1
    </select>

    <select id="queryByRoleIds"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.Role">
        SELECT
        <include refid="allColumns"/>
        FROM role
        WHERE role_id IN
        <foreach collection="roleIds" item="roleId" open="(" close=")" separator=",">
            #{roleId}
        </foreach>
        AND
        <include refid="notDeleted"/>
        AND status = 1
        ORDER BY role_code
    </select>
</mapper>
