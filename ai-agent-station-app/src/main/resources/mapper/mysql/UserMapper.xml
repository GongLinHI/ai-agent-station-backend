<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gonglin.ai4knowledge.infrastructure.mysql.mapper.UserMapper">

    <sql id="notDeleted">
        is_deleted = 0
    </sql>

    <sql id="allColumns">
        id, user_id, username, password_hash, nickname, email, phone, status,
        last_login_time, last_login_ip, create_time, update_time, is_deleted, delete_time
    </sql>

    <sql id="DynamicInsertColumnName">
        <if test="userId != null">user_id,</if>
        <if test="username != null">username,</if>
        <if test="passwordHash != null">password_hash,</if>
        <if test="nickname != null">nickname,</if>
        <if test="email != null">email,</if>
        <if test="phone != null">phone,</if>
        <if test="status != null">status,</if>
        <if test="lastLoginTime != null">last_login_time,</if>
        <if test="lastLoginIp != null">last_login_ip,</if>
        <if test="createTime != null">create_time,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="isDeleted != null">is_deleted,</if>
        <if test="deleteTime != null">delete_time,</if>
    </sql>

    <sql id="DynamicInsertColumnValue">
        <if test="userId != null">#{userId},</if>
        <if test="username != null">#{username},</if>
        <if test="passwordHash != null">#{passwordHash},</if>
        <if test="nickname != null">#{nickname},</if>
        <if test="email != null">#{email},</if>
        <if test="phone != null">#{phone},</if>
        <if test="status != null">#{status},</if>
        <if test="lastLoginTime != null">#{lastLoginTime},</if>
        <if test="lastLoginIp != null">#{lastLoginIp},</if>
        <if test="createTime != null">#{createTime},</if>
        <if test="updateTime != null">#{updateTime},</if>
        <if test="isDeleted != null">#{isDeleted},</if>
        <if test="deleteTime != null">#{deleteTime},</if>
    </sql>

    <sql id="DynamicUpdateColumns">
        <if test="userId != null">user_id = #{userId},</if>
        <if test="username != null">username = #{username},</if>
        <if test="passwordHash != null">password_hash = #{passwordHash},</if>
        <if test="nickname != null">nickname = #{nickname},</if>
        <if test="email != null">email = #{email},</if>
        <if test="phone != null">phone = #{phone},</if>
        <if test="status != null">status = #{status},</if>
        <if test="lastLoginTime != null">last_login_time = #{lastLoginTime},</if>
        <if test="lastLoginIp != null">last_login_ip = #{lastLoginIp},</if>
        <if test="createTime != null">create_time = #{createTime},</if>
        <if test="updateTime != null">update_time = #{updateTime},</if>
        <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
        <if test="deleteTime != null">delete_time = #{deleteTime},</if>
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `user`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnName"/>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnValue"/>
        </trim>
    </insert>

    <update id="deleteById">
        UPDATE `user`
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="deleteByUserId">
        UPDATE `user`
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE user_id = #{userId}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateById">
        UPDATE `user`
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateByUserId">
        UPDATE `user`
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE user_id = #{userId}
        AND
        <include refid="notDeleted"/>
    </update>

    <select id="query"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.User">
        SELECT
        <include refid="allColumns"/>
        FROM `user`
        WHERE
        1=1
        <if test="id != null">
            AND id = #{id}
        </if>
        <if test="userId != null and userId != ''">
            AND user_id = #{userId}
        </if>
        <if test="username != null and username != ''">
            AND username LIKE CONCAT('%', #{username}, '%')
        </if>
        <if test="nickname != null and nickname != ''">
            AND nickname LIKE CONCAT('%', #{nickname}, '%')
        </if>
        <if test="email != null and email != ''">
            AND email LIKE CONCAT('%', #{email}, '%')
        </if>
        <if test="phone != null and phone != ''">
            AND phone LIKE CONCAT('%', #{phone}, '%')
        </if>
        <if test="status != null">
            AND status = #{status}
        </if>
        <if test="isDeleted != null">
            AND is_deleted = #{isDeleted}
        </if>
        ORDER BY create_time DESC
    </select>

    <select id="queryByUsername"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.User">
        SELECT
        <include refid="allColumns"/>
        FROM `user`
        WHERE username = #{username}
        AND
        <include refid="notDeleted"/>
        LIMIT 1
    </select>
</mapper>
