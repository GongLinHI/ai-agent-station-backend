<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gonglin.ai4knowledge.infrastructure.mysql.mapper.UserRoleMapper">

    <sql id="notDeleted">
        is_deleted = 0
    </sql>

    <sql id="allColumns">
        id, user_id, role_id, create_time, update_time, is_deleted, delete_time
    </sql>

    <sql id="DynamicInsertColumnName">
        <if test="userId != null">user_id,</if>
        <if test="roleId != null">role_id,</if>
        <if test="createTime != null">create_time,</if>
        <if test="updateTime != null">update_time,</if>
        <if test="isDeleted != null">is_deleted,</if>
        <if test="deleteTime != null">delete_time,</if>
    </sql>

    <sql id="DynamicInsertColumnValue">
        <if test="userId != null">#{userId},</if>
        <if test="roleId != null">#{roleId},</if>
        <if test="createTime != null">#{createTime},</if>
        <if test="updateTime != null">#{updateTime},</if>
        <if test="isDeleted != null">#{isDeleted},</if>
        <if test="deleteTime != null">#{deleteTime},</if>
    </sql>

    <sql id="DynamicUpdateColumns">
        <if test="userId != null">user_id = #{userId},</if>
        <if test="roleId != null">role_id = #{roleId},</if>
        <if test="createTime != null">create_time = #{createTime},</if>
        <if test="updateTime != null">update_time = #{updateTime},</if>
        <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
        <if test="deleteTime != null">delete_time = #{deleteTime},</if>
        <if test="deleteTime == null and isDeleted != null">delete_time = null,</if>
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnName"/>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <include refid="DynamicInsertColumnValue"/>
        </trim>
    </insert>

    <update id="deleteById">
        UPDATE user_role
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="deleteByUserId">
        UPDATE user_role
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE user_id = #{userId}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="deleteByRoleId">
        UPDATE user_role
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE role_id = #{roleId}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="deleteByUserIdAndRoleId">
        UPDATE user_role
        SET is_deleted = 1,
        delete_time = #{deleteTime}
        WHERE user_id = #{userId}
        AND role_id = #{roleId}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateById">
        UPDATE user_role
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </update>

    <update id="updateByUserIdAndRoleId">
        UPDATE user_role
        <set>
            <include refid="DynamicUpdateColumns"/>
        </set>
        WHERE user_id = #{userId}
        AND role_id = #{roleId}
    </update>

    <select id="queryById"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.UserRole">
        SELECT
        <include refid="allColumns"/>
        FROM user_role
        WHERE id = #{id}
        AND
        <include refid="notDeleted"/>
    </select>

    <select id="queryByUserIdAndRoleId"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.UserRole">
        SELECT
        <include refid="allColumns"/>
        FROM user_role
        WHERE user_id = #{userId}
        AND role_id = #{roleId}
        LIMIT 1
    </select>

    <select id="queryAll"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.UserRole">
        SELECT
        <include refid="allColumns"/>
        FROM user_role
        WHERE
        <include refid="notDeleted"/>
        ORDER BY user_id, role_id
    </select>

    <select id="queryByUserId"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.UserRole">
        SELECT
        <include refid="allColumns"/>
        FROM user_role
        WHERE user_id = #{userId}
        AND
        <include refid="notDeleted"/>
        ORDER BY role_id
    </select>

    <select id="queryByRoleId"
            resultType="com.gonglin.ai4knowledge.infrastructure.mysql.pojo.UserRole">
        SELECT
        <include refid="allColumns"/>
        FROM user_role
        WHERE role_id = #{roleId}
        AND
        <include refid="notDeleted"/>
        ORDER BY user_id
    </select>
</mapper>
